{
  "name": "eterna",
  "description": "Eterna Design System Artifacts",
  "license": "ISC",
  "author": "Nick Staroba",
  "main": "index.js",
  "scripts": {
    "build": "rollup --config rollup.config.js",
    "dev::build": "rollup --config rollup.config.js --configDebug",
    "dev::login": "npm login --registry http://localhost:4873",
    "dev::prerelease": "lerna publish --registry http://localhost:4873 --dist-tag prerelease --no-push --conventional-prerelease",
    "dev::registry": "verdaccio",
    "dev::release": "lerna publish --registry http://localhost:4873 --no-push",
    "postinstall": "husky install",
    "lint": "npm run lint::prettier && npm run lint::eslint",
    "lint::eslint": "eslint \"**/*.{js,jsx,ts,tsx}\" --fix --resolve-plugins-relative-to ./",
    "lint::prettier": "prettier \"./**/*.{css,html,js,json,jsx,md,scss,ts,tsx}\" --write",
    "release::publish": "lerna publish --conventional-prerelease --create-release github"
  },
  "dependencies": {
    "@eterna/commitlint-config": "1.2.0",
    "@eterna/eslint-config-react": "1.1.0",
    "@eterna/eslint-config-typescript": "1.2.0",
    "@eterna/lint-staged-config-eslint": "1.2.0",
    "@eterna/lint-staged-config-prettier": "1.2.0",
    "@eterna/lint-staged-config-stylelint": "1.2.0",
    "@eterna/stylelint-config-sass": "1.2.0",
    "@eterna/typescript-config": "1.0.1",
    "@fontsource/roboto": "4.5.8",
    "@fontsource/roboto-condensed": "4.5.9",
    "@fontsource/roboto-flex": "4.5.2",
    "@fontsource/roboto-mono": "4.5.8",
    "@fontsource/roboto-serif": "4.5.8",
    "@fontsource/roboto-slab": "4.5.9",
    "@mui/material": "5.10.3",
    "@rollup/plugin-image": "2.1.1",
    "@types/node": "18.7.23",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "autoprefixer": "10.4.12",
    "clsx": "1.2.1",
    "eslint-config-airbnb-typescript": "17.0.0",
    "husky": "8.0.1",
    "lerna": "5.5.4",
    "normalize.css": "8.0.1",
    "postcss-clean": "1.2.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rimraf": "3.0.2",
    "rollup": "2.79.1",
    "rollup-plugin-copy": "3.4.0",
    "rollup-plugin-filesize": "9.1.2",
    "rollup-plugin-ignore-import": "1.3.2",
    "rollup-plugin-peer-deps-external": "2.2.4",
    "rollup-plugin-postcss": "4.0.2",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-ts": "3.0.2",
    "rollup-plugin-visualizer": "5.8.2",
    "sass": "1.55.0",
    "sass-mq": "5.0.1",
    "verdaccio": "5.15.4"
  },
  "peerDependencies": {
    "@mui/material": "5.x",
    "clsx": "1.x",
    "react": "18.x",
    "react-dom": "18.x"
  },
  "workspaces": [
    "packages/*"
  ]
}
